<%include partials/header.ejs%>
<!--Create Account Page-->
<section id="fh5co-home" data-section="home" style="background-image: url(images/full_image_2.jpg);" data-stellar-background-ratio="0.5">
    <div class="gradient"></div>
    <div class="container">
        <div class="text-wrap">
            <div class="text-inner">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h1 id="mainHeading">Program. Upload. Share.</h1>
                        <h2> Share your program's execution!</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="slant"></div>
</section>


<section id="fh5co-account" data-section="contact">
    <div class="container" id="createAccountPage">
        <div class="row">
            <div class="col-md-12 section-heading text-center">
                <h2>Create an Account</h2>
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 subtext">
                        <!-- Displays errors if info missing -->
                        <h3>You will be able to upload and store your program files</h3>
                        <% if (error) { %>
                        <ul>
                            <% error.forEach(function (error) { %>
                            <div class="alert alert-danger">Error:  <%= error %></div>
                            <% }) %>
                        </ul>
                        <%}%>
                    </div>
                </div>
            </div>
        </div>
        <div class="row row-bottom-padded-md">

            <!-- Form -->
            <div class="col-md-12 ">
                <form method="POST" class="form-signin">
                    <h3 class="form-signin-heading" id="loginText"> Required Information </h3>
                    <input type="text1" class="form-control" name="username" id="username" placeholder="Username" required="" autofocus="" style = "margin-bottom: 10px;"/>
                    <input type="text2" class="form-control" name="email" placeholder="Email Address" required="" style = "margin-bottom: 10px;"/>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required="" />
                    <input type="password" class="form-control" id="password" name="password2" placeholder="Re-enter Password" required="" />
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>


<%include partials/footer.ejs%>
